{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ideale.eu/schemas/artifact.v0.1.json",
  "title": "IDEALE Artifact Metadata",
  "type": "object",
  "required": ["artifact"],
  "properties": {
    "artifact": {
      "type": "object",
      "required": ["content_hash", "revshare"],
      "properties": {
        "content_hash": { "type": "string", "pattern": "^(sha256:)[A-Fa-f0-9]{64}$" },
        "declared_value_eur": { "type": "number", "minimum": 0 },
        "license": { "type": "string" },
        "revshare": {
          "type": "object",
          "required": ["total_bps", "allocations"],
          "properties": {
            "total_bps": { "type": "integer", "enum": [10000] },
            "allocations": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["id", "role", "share_bps", "payout"],
                "properties": {
                  "id": { "type": "string" },
                  "role": { "type": "string" },
                  "share_bps": { "type": "integer", "minimum": 1, "maximum": 10000 },
                  "payout": {
                    "type": "object",
                    "properties": {
                      "tt":   { "type": "string" },
                      "iban": { "type": ["string","null"] }
                    },
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false
              }
            },
            "derivative_policy": { "type": "string", "enum": ["accumulate_by_reference", "flat"] }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
