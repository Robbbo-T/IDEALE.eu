{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "ideale://standards/artifact.schema.v0.1",
  "title": "IDEALE Artifact Metadata Schema",
  "description": "Schema for artifact metadata including content hash, value declaration, licensing, tooling, and revenue sharing",
  "type": "object",
  "required": ["artifact"],
  "properties": {
    "artifact": {
      "type": "object",
      "required": ["content_hash", "declared_value_eur", "license", "revshare"],
      "properties": {
        "content_hash": { 
          "type": "string", 
          "pattern": "^(sha256:)[A-Fa-f0-9]{64}$",
          "description": "SHA-256 hash of the artifact content"
        },
        "declared_value_eur": { 
          "type": "number", 
          "minimum": 0,
          "description": "Declared value of the artifact in EUR"
        },
        "license": { 
          "type": "string",
          "description": "License identifier (e.g., Apache-2.0, MIT)"
        },
        "tooling": {
          "type": "object",
          "description": "Declaration of meta-tools and infrastructure used to create this artifact",
          "properties": {
            "used": {
              "type": "array",
              "description": "List of meta-assets (schemas, workflows, generators, assistants) used",
              "items": {
                "type": "object",
                "required": ["id"],
                "properties": {
                  "id": { 
                    "type": "string",
                    "description": "Unique identifier of the meta-asset"
                  },
                  "version": { 
                    "type": ["string", "null"],
                    "description": "Version of the meta-asset used"
                  },
                  "weight": { 
                    "type": ["number", "null"], 
                    "minimum": 0,
                    "description": "Relative weight for royalty distribution (higher = more contribution)"
                  },
                  "payoutHint": {
                    "type": "object",
                    "description": "Optional payout information override",
                    "properties": { 
                      "tt": { 
                        "type": "string",
                        "description": "Token transfer identifier or account reference"
                      }, 
                      "iban": { 
                        "type": ["string", "null"],
                        "description": "Optional IBAN for traditional payments"
                      } 
                    },
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "revshare": {
          "type": "object",
          "required": ["allocations"],
          "description": "Revenue sharing configuration for creators and validators",
          "properties": {
            "allocations": {
              "type": "array",
              "description": "List of revenue share allocations to creators",
              "items": {
                "type": "object",
                "required": ["id", "share_bps"],
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "Identifier of the contributor (e.g., DID, GitHub handle)"
                  },
                  "share_bps": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 10000,
                    "description": "Share in basis points (0-10000, where 10000 = 100%)"
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
