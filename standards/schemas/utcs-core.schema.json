{
  "$id": "https://ideale.eu/schemas/utcs-core.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UTCS Core",
  "type": "object",
  "required": ["schema_version", "utcs_id", "product", "domain", "bridge", "primary_path", "provenance", "sheet", "evidence", "integrity"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "utcs_id": {
      "type": "string",
      "pattern": "^UTCS-MI:[A-Z0-9\\-]+:[A-Z0-9\\-]+:[A-Z0-9\\-]+:[0-9]{4}:v[0-9]+$"
    },
    "product": { "type": "string", "minLength": 1 },
    "domain": {
      "type": "string",
      "enum": ["AAA","AAP","CCC","CQH","DDD","EDI","EEE","EER","IIF","IIS","LCC","LIB","MEC","OOO","PPP"]
    },
    "bridge": {
      "oneOf": [
        { "type": "string", "const": "QS→FWD→UE→FE→CB→QB" },
        {
          "type": "array",
          "items": { "type": "string", "enum": ["QS","FWD","UE","FE","CB","QB"] },
          "minItems": 6,
          "uniqueItems": false
        }
      ]
    },
    "primary_path": {
      "type": "string",
      "enum": ["CB→UE","FE→CB→UE","FE→CB→QB→UE"]
    },
    "provenance": {
      "type": "object",
      "required": ["owner","maintainer"],
      "properties": {
        "owner": { "type": "string", "minLength": 1 },
        "maintainer": { "type": "string", "minLength": 1 },
        "reviewers": { "type": "array", "items": { "type": "string" } }
      }
    },
    "threading": { "type": "object" },
    "structure": { "type": "object" },
    "sheet": {
      "type": "object",
      "required": ["files"],
      "properties": {
        "files": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["path","role"],
            "properties": {
              "path": { "type": "string", "minLength": 1 },
              "role": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "evidence": {
      "type": "object",
      "required": ["links"],
      "properties": {
        "requirements": { "type": "array", "items": { "type": "string" } },
        "links": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "classification": {
          "type": "string",
          "enum": ["INTERNAL","INTERNAL–EVIDENCE-REQUIRED","RESTRICTED"]
        }
      }
    },
    "integrity": {
      "type": "object",
      "required": ["hash_algorithm","content_hash"],
      "properties": {
        "hash_algorithm": { "type": "string", "enum": ["SHA256"] },
        "content_hash": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
      }
    }
  },
  "additionalProperties": true
}
